{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Share configuration options",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "ci-linux",
      "inherits": "base",
      "description": "CI build on Linux"
    },
    {
      "name": "ci-macos",
      "inherits": "base",
      "description": "CI build on macOS"
    },
    {
      "name": "singularity",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "OFF",
        "CMAKE_INSTALL_PREFIX": "/usr/local"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build",
      "configurePreset": "base",
      "configuration": "Release"
    }
  ]
}
